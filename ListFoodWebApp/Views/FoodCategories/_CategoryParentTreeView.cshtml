@model IEnumerable<FoodCategory>

<link href="~/css/parentCatgories.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="scrolling-wrapper row flex-row flex-nowrap mt-4 pb-4 pt-2">
        @foreach (var item in Model)
        {
            @if (item.Active)
            {
                <div class="col-5">
                    <div class="card card-block">
                        <i class="@item.Name"></i>
                        <a style="color: #4f953b" id="@item.FoodCategoryID" href="javascript:void(0)" onclick="ChildrenCall(this.id)">@Html.DisplayFor(modelItem => item.Name)</a>
                    </div>
                </div>
            }
        }
    </div>
</div>
