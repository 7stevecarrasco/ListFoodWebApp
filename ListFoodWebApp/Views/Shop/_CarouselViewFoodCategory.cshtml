@model IEnumerable<FoodCategory>

<link href="~/css/parentCatgories.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="scrolling-wrapper row flex-row flex-nowrap mt-4 pb-4 pt-2">
        @foreach (var item in Model)
        {
            @if (item.Active)
            {

                <div class="col-2">
                    <div class="buttons">
                        <ul class="nav nav-pills nav-fill">
                            <li class="nav-item">
                                <a class="nav-link"><span id="@item.FoodCategoryID" onclick="loadMainSection('@item.FoodCategoryID')" style="cursor: pointer;">@Html.DisplayFor(modelItem => item.Name)</span></a>

                            </li>
                        </ul>
                    </div>
                    </div>
                    }
                    }
                </div>

            </div>
