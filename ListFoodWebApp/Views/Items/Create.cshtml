@model ListFoodWebApp.Models.Item

@{
    ViewData["Title"] = "Create";
}

<h1>Add Item</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="FoodCategoryID" class="control-label"> Food Category</label>
                <select asp-for="FoodCategoryID" class ="form-control" asp-items="ViewBag.CategoryList"></select>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary btn-lg" />
                <a asp-action="Index" class="btn btn-danger btn-lg">Back</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
